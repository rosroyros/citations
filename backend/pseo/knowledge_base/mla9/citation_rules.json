  {
    "rule_id": "MLA9-R1.1",
    "source": "MLA Handbook 9th Edition, Section 2.1",
    "category": "author_formatting",
    "description": "Author names MUST use full first names, not initials. This is a fundamental difference from APA style. In MLA 9, the emphasis is on full names to provide clarity and respect for the author's identity. The first author's name is inverted (Last, First Middle), while subsequent authors in two-author works use normal order (First Last).",
    "examples": [
      {
        "type": "correct",
        "citation": "Morrison, Toni"
      },
      {
        "type": "correct",
        "citation": "Garcia, Maria Elena"
      },
      {
        "type": "incorrect",
        "citation": "Morrison, T.",
        "error_reason": "Uses initials instead of full first name"
      },
      {
        "type": "incorrect",
        "citation": "Morrison, T. E.",
        "error_reason": "Uses initials for both first and middle names"
      }
    ],
    "changed_from_mla8": false,
    "required_elements": [
      "last_name",
      "comma",
      "full_first_name",
      "middle_name_optional"
    ],
    "common_errors": [
      "Using initials (APA style confusion)",
      "Not using full first name",
      "Abbreviating middle names"
    ],
    "affected_source_types": ["all"]
  },
