        "error_reason": "Uses ampersand instead of 'and' (APA style)"
      },
      {
        "type": "incorrect",
        "citation": "Garcia, Maria and Patel, Sanjay",
        "error_reason": "Second author name incorrectly inverted"
      },
      {
        "type": "incorrect",
        "citation": "Garcia, Maria, Patel, Sanjay",
        "error_reason": "Missing 'and' between authors"
      }
    ],
    "changed_from_mla8": false,
    "required_elements": [
      "first_author_inverted",
      "comma",
      "and",
      "second_author_normal_order"
