# Production Environment Configuration Template
# Copy to .env.production and update values as needed

# Citation Logging Feature Toggle
# Set to 'true' to enable citation logging, 'false' to disable
# IMPORTANT: Start with 'false' during deployment, enable after validation
CITATION_LOGGING_ENABLED=false

# Citation Log Configuration
CITATION_LOG_PATH=/opt/citations/logs/citations.log
CITATION_LOG_DIR=/opt/citations/logs

# Base Application Configuration
BASE_URL=https://citationformatchecker.com
MOCK_LLM=false

# Polar API Configuration
POLAR_ACCESS_TOKEN=your_polar_access_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
TEST_DB_PATH=/opt/citations/backend/backend/credits.db
TEST_VALIDATIONS_DB_PATH=/opt/citations/dashboard/data/validations.db

# Gating Configuration
GATED_RESULTS_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/citations/app.log

# Application Security
CORS_ORIGINS=["https://citationformatchecker.com"]

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10